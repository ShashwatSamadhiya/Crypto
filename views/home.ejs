  <link rel="stylesheet" href="css/styles.css">
</head>

<body>


  <div class="container-fluid textt">
    <div class="row">
      <div class="col one">
        <h1>HOLDLINFO</h1>
        <h5>Powered By <a style="color:#5dc7c2;" href="https://www.finstreet.in/">Finstreet</a></h5>
      </div>
      <div class="col two">


        <a href="#" id="fbtn" class="btn btn-info btn-1 dbtn" role="button" aria-pressed="true">INR</a>
        <!-- <a href="#" id="sbtn" class="btn btn-info btn-2 dbtn" role="button" aria-pressed="true">Link</a> -->
        <a href="https://wazirx.com/exchange/BTC-INR" id="tbtn" class="btn btn-info btn-3 dbtn" role="button" aria-pressed="true" target="_blank">Invest</a>
      </div>
      <div class="col three">
        <!-- <p>    Column</p> -->
        <a href="/connect/telegram" class="btn btn-primary btn-lg active large lagja" role="button" aria-pressed="true"><i class="fab fa-telegram-plane"></i> Telegram</a>
        <label class="switch" class="sliderr">
          <input type="checkbox">
          <span class="slider round " onclick="myFunction()"></span>
        </label>
      </div>
    </div>
  </div>

  <div class="blank">
  </div>
  <div class="imgi">
    <a href="https://finstreet.in/"> <img class="img" src="https://hodlinfo.com/static/media/cryptonews.54869ee3.png" alt="image"></a>

  </div>



  <div class="container-fluid">
    <div class="row paragraphs">
      <div class="col head">
        <h4>#</h4>
      </div>
      <div class="col head">
        <h4>Name</h4>
      </div>
      <div class="col head">
        <h4>Last Traded price</h4>
      </div>
      <div class="col head">
        <h4>Buy/Sell Price</h4>
      </div>
      <div class="col head">
        <h4>Volume</h4>
      </div>
      <div class="col head">
        <h4>Base_Unit</h4>
      </div>

    </div>


    <% for(let i=0;i<posts.length;i++) { %>

    <div class="row firstprg cryp ">
      <div class="col head">
        <h5 class="whendarki"><%=posts[i].id%></h5>
      </div>
      <br>
      <div class="col head ">
        <h5 class="whendarki"><%=posts[i].name%></h5>
      </div>
      <br>
      <div class="col head">
        <h5 class="whendarki"><%=posts[i].last%></h5>
      </div>
      <br>
      <div class="col head">
        <h5 class="whendarki"><%=posts[i].buyValue%>/<%=posts[i].sellValue%></h5>
      </div>
      <br>
      <div class="col head">
        <h5 class="whendarki"><%=posts[i].volume%></h5>
      </div>
      <br>
      <div class="col head">
        <h5 class="whendarki"><%=posts[i].baseUnit%></h5>
      </div>

    </div>


    <% } %>
  </div>

  <div class="image-2">
    <a href="https://www.algorand.com/futurefi/"> <img class="img-2" src="https://hodlinfo.com/static/media/banneriost.208a75ba.jpg" alt="img"></a>

  </div>
